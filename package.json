{
  "name": "bizpulse",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:www": "turbo --filter=www build",
    "dev": "turbo dev",
    "dev:www": "turbo --filter=www dev",
    "start": "turbo start",
    "start:www": "turbo --filter=www start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "2.5.2"
  },
  "packageManager": "pnpm@10.10.0"
}
